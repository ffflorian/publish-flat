{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "publish-flat": "dist/cli.js",
    "publish-flat-copy": "dist/cli-copy.js"
  },
  "dependencies": {
    "commander": "5.0.0",
    "commander-remaining-args": "1.2.0",
    "fs-extra": "9.0.0",
    "logdown": "3.3.1",
    "npm-packlist": "2.1.1"
  },
  "description": "Publish your project without the dist directory",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.6",
    "@ffflorian/semantic-release-config": "0.2.0",
    "@ffflorian/tslint-config": "0.7.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/commander-remaining-args": "1.2.1",
    "@types/fs-extra": "8.1.0",
    "@types/node": "~12",
    "@types/npm-packlist": "1.1.1",
    "husky": "4.2.5",
    "lint-staged": "10.1.7",
    "prettier": "2.0.4",
    "rimraf": "3.0.2",
    "semantic-release": "17.0.7",
    "ts-node": "8.9.0",
    "tslint": "6.1.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.8.3"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "tslint --project tsconfig.json --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "publish-flat",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/publish-flat.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "flatten": "yarn start -o flattened",
    "prettier": "prettier \"*.{json,md}\"",
    "postversion": "node ../dist/cli-copy.js version",
    "release": "semantic-release",
    "start": "ts-node src/cli.ts",
    "test": "exit 0"
  },
  "version": "1.4.0"
}
